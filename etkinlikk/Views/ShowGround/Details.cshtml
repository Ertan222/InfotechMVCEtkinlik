@model ShowgroundHomeViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

    <div>
        <h4>ShowGround</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ShowGround.ShowGroundName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ShowGround.ShowGroundName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ShowGround.Capacity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ShowGround.Capacity)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ShowGround.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ShowGround.Address)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ShowGround.District)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ShowGround.District.DistrictName)
            </dd>
        </dl>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Category /
                </th>
                <th>
                    Delete
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (ShowGroundSubCategory showGroundSubCategory in Model.ShowGroundSubCategoryList)
            {
                <tr>
                    <td>
                        @showGroundSubCategory.SubCategory.SubCategoryName
                    </td>
                    <td>
                        x
                    </td>
                </tr>
            }
        </tbody>
    </table>



    <div>
        <form asp-controller="ShowGround" asp-action="AddSubCategoryToShowGround" method="post" asp-route-id="@Model.ShowGround.ShowGroundID">
            <select name="SubCategoryID">
                <option value="0">Choose a Sub Category</option>
                @foreach (SubCategory subCategory in Model.SubCategoryList)
                {
                    <option value="@subCategory.SubCategoryID">@subCategory.SubCategoryName</option>
                }
            </select>

            <div>
                <input type="submit" value="Add sub category" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.ShowGround.ShowGroundID">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</body>
</html>
